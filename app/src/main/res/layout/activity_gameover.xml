<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.spurs.shotmonster.GameoverActivity">

    <ImageView
        android:id="@+id/img_champion"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:onClick="clickChampion"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/ui_gameover_back"
        android:layout_gravity="center_horizontal"
        android:weightSum="3"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/btn_champion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_champion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0000000"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/btnScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0000000"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/btn_retry"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:src="@drawable/btn_select_retry"
            android:layout_marginLeft="80dp"
            android:clickable="true"
            android:onClick="clickRetry"/>

        <ImageView
            android:id="@+id/btn_exit"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:src="@drawable/btn_select_exit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:clickable="true"
            android:onClick="clickExit"/>

    </RelativeLayout>

</LinearLayout>
